<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appcare.eaglesboys.activities.MainActivity"
    tools:showIn="@layout/activity_main">
    <TextView
        android:layout_width="450px"
        android:layout_height="70px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tryyy"
        android:layout_marginTop="120px"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:id="@+id/textView2" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="@drawable/logo"
        android:id="@+id/imageView3"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="700px"
        android:layout_height="200px"
        android:background="@drawable/welcme"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/locateme"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="23dp"
        android:background="@drawable/cornerdesign"
        android:text="Locate Me"
        android:textColor="#C72F82"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textAlignment="viewStart"

        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/skip" />
    <TextView
        android:id="@+id/skip"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/skip"
        android:onClick="whenclickskip"
        android:layout_below="@+id/locateme"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/newaddress"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/adres"
        android:onClick="addnewaddress"
        android:layout_below="@+id/skip"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
