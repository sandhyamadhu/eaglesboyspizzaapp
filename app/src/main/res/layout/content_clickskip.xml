<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appcare.eaglesboys.activities.Clickskip"
    tools:showIn="@layout/activity_clickskip">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="25dp"
        app:srcCompat="@drawable/pizzafinal" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="135dp"
        app:srcCompat="@drawable/tryyy"
        android:layout_marginTop="0dp"
         />
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="105dp"
        android:background="@drawable/tabbedbtn">

        <RadioButton
            android:id="@+id/radioWindows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Home Delivery"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioAndroid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pick Up"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RadioGroup>
    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="200dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="Set Delivery Location"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#C72F82"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="245dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittextcorner"


        />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        android:background="@drawable/edittextcorner"
        />
    <Button
        android:id="@+id/showbtn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textAllCaps="false"
        android:text="Show Menu"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="45dp"
        android:background="@drawable/savebtn"
        android:onClick="showmenu"
        android:layout_below="@+id/spinner2"
        android:layout_alignStart="@+id/radioGroup1"
        android:layout_marginStart="34dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="34dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/showbtn"
        android:layout_alignParentEnd="true">
        <View
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="OR"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />
        <View
            android:layout_width="130dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="#ffffff"/>

    </LinearLayout>
    <Button
        android:id="@+id/locateme"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="23dp"
        android:background="@drawable/cornerdesign"
        android:text="Locate Me"
        android:textColor="#C72F82"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textAlignment="viewStart"

        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
