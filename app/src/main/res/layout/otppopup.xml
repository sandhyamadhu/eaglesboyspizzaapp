    <EditText
        android:id="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:hint="Enter your phone number"
        android:textColorHint="#ad000000"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:maxLength="10"
        android:background="@drawable/topingcorners"/>

    <Button
        android:id="@+id/sendnumber"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/savebtn"
        android:text="Submit"
        android:gravity="center"
        android:layout_marginLeft="180dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:onClick="sendnumber"
       />

    <TextView
        android:id="@+id/editText"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:text="OTP will be sent to your number you have given"
        android:textSize="18dp"/>

</RelativeLayout>