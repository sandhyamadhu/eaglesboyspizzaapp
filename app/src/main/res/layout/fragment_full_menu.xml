<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/blackcolor"
             tools:context="com.appcare.eaglesboys.menu.FullMenuFragment">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="374dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/piza"

                    />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="Every Day offers"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="23dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/piza" />
        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="168dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/card4"
                    app:cardCornerRadius="3dp"
                    android:elevation="3dp"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/vegpizza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/vegpizza"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="110dp"
                        android:text="Veg Pizza"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    app:cardCornerRadius="3dp"
                    android:elevation="3dp"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/nonvegpizza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/nonpizza"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="110dp"
                        android:text="Chicken pizza"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    app:cardCornerRadius="3dp"
                    android:elevation="3dp"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="7dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/splpizza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/splpizza" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="110dp"
                        android:text="Special Pizza"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    app:cardCornerRadius="3dp"
                    android:elevation="3dp"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/drinks"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@drawable/drinks" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="110dp"
                        android:text="Drinks"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                app:cardCornerRadius="3dp"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/mania"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:background="@drawable/mania"

                    />

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="100dp"
                    android:text="Pizza Mania"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </ScrollView>


</FrameLayout>