<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appcare.eaglesboys.activities.OffersPage"
    tools:showIn="@layout/activity_offers_page"
    android:id="@+id/drawlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="#C72F82" />
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/horizontalScrollView">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="374dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/piza"
                            />
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Every Day offers"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/piza"
                    />
            </LinearLayout>

        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="168dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="7dp">
                        <ImageView
                            android:id="@+id/vegpizza"
                            android:layout_width="180dp"
                            android:layout_height="160dp"
                            android:background="@drawable/vegpizza"/>
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Thursday Offer"
                            android:layout_marginTop="110dp"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="7dp">
                        <ImageView
                            android:id="@+id/nonvegpizza"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@drawable/nonpizza"/>
                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Buy 1 + Get 1"
                            android:layout_marginTop="110dp"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            />

                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="7dp">
                        <ImageView
                            android:id="@+id/splpizza"
                            android:layout_width="175dp"
                            android:layout_height="170dp"
                            android:background="@drawable/splpizza"/>
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Special Offer"
                            android:layout_marginTop="110dp"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="7dp">
                        <ImageView
                            android:id="@+id/drinks"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@drawable/drinks"/>
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Hungry Offer"
                            android:layout_marginTop="110dp"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_margin="7dp">

                    <ImageView
                        android:id="@+id/mania"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:background="@drawable/mania"

                        />

                    <TextView
                        android:id="@+id/textView0"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Pizza Mania"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_marginTop="100dp"
                        android:textSize="18dp"
                        />

                </android.support.v7.widget.CardView>
            </LinearLayout>



        </ScrollView>



    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/dupe"
        app:itemIconTint="#000000"
        app:theme="@style/NavigationViewStyle"
        android:id="@+id/navview"
        >


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
