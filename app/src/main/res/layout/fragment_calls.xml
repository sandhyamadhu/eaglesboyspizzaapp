<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:id="@+id/cardView1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/img"
                    android:layout_width="135dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/piza">

                </com.github.siyamed.shapeimageview.CircularImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Panner Pizza"
                            android:textStyle="bold"

                            android:textSize="23dp" android:textColor="#C72F82"/>
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:text="₹"
                            android:textSize="25dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/cost"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="110"
                            android:textStyle="bold"
                            android:textSize="25dp" android:textColor="#000000"

                            android:layout_marginTop="10dp"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:text="Onion | Capsicum | Tomato"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:text="Olive | Mushroom"/>
                    <ImageView
                        android:id="@+id/expanddown"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="150dp"
                        android:background="@drawable/dwnarw"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:id="@+id/cardView2"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/imgexp"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/piza"
                        />
                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="#C72F82"
                        android:scaleX="1.5"
                        android:scaleY="1.50"
                        android:text="Extra Cheese"
                        android:textColor="#C72F82"
                        android:textSize="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/nameexp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Panner Pizza"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"

                            android:textSize="20dp" android:textColor="#C72F82"/>
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="₹"
                            android:textSize="25dp"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/costexp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="110"
                            android:textStyle="bold"
                            android:textSize="25dp" android:textColor="#000000"

                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#000000"

                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:text="Onion | Capsicum | Tomato"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:text="Olive | Mushroom"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="-9dp"
                        android:layout_marginLeft="-10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            android:buttonTint="#C72F82"
                            android:scaleX="1.5"
                            android:scaleY="1.50"
                            android:text="7"
                            android:textColor="#C72F82"
                            android:textSize="10dp"
                            android:checked="true"/>

                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="#C72F82"
                            android:buttonTint="#C72F82"
                            android:textSize="10dp"
                            android:scaleX="1.5"
                            android:scaleY="1.50"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="-10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            android:buttonTint="#C72F82"
                            android:scaleX="1.5"
                            android:scaleY="1.50"
                            android:text="13"
                            android:textColor="#C72F82"
                            android:textSize="10dp" />

                        <!--<CheckBox-->
                        <!--android:id="@+id/checkBox4"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
