                    <ImageView
                        android:id="@+id/expandup"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="-15dp"
                        android:layout_marginLeft="120dp"
                        android:background="@drawable/upp"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>








</RelativeLayout>
