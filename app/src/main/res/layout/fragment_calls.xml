                        <!--android:textColor="#C72F82"-->
                        <!--android:buttonTint="#C72F82"-->
                        <!--android:textSize="10dp"-->
                        <!--android:scaleX="1.5"-->
                        <!--android:scaleY="1.50"/>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="190dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp">

                        <Button
                            android:id="@+id/minus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/customeColor"
                            android:background="@drawable/circle"/>
                        <TextView
                            android:id="@+id/texttext"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/customeColor"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <Button
                            android:id="@+id/plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textColor="@color/customeColor"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="-28dp"
                            android:background="@drawable/circle"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/customize"
                        android:layout_width="160dp"
                        android:layout_height="38dp"
                        android:background="#C72F82"
                        android:text="Customize Topping"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="160dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="13dp"
                        android:background="#C72F82"
                        android:text="Add to Cart"
                        android:textStyle="bold"
                        android:textSize="17dp"
                    android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:onClick="addtocart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="-10dp">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="30dp"
                        android:text="Select Crust"
                        android:textColor="#C72F82"
                        android:textSize="15dp"
                        android:textAllCaps="true"/>
                    <View
                        android:layout_width="110dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="-12dp"
                        android:background="#C72F82"
                        android:layout_marginLeft="40dp">
                    </View>
                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="New Hand Tossed"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#C72F82"
                        android:buttonTint="#C72F82"
                        android:layout_marginTop="-10dp"
                        android:checked="true"/>
                    <CheckBox
                        android:id="@+id/checkBox7"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Wheat Thin Crust"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#C72F82"
                        android:buttonTint="#C72F82"
                        android:layout_marginTop="-27dp"/>
                    <CheckBox
                        android:id="@+id/checkBox8"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Cheese Burst"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#C72F82"
                        android:buttonTint="#C72F82"
                        android:layout_marginTop="-27dp"
                        android:visibility="invisible" />
