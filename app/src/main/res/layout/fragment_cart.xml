<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="ORDER SUMMERY"
        android:textColor="@color/customeColor"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"

        android:id="@+id/textView8" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="280dp"
        android:text="edit"

        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/savebtn"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#ffffff"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Item"
                android:textSize="19dp"
                android:textColor="@color/customeColor"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:text="Quantity"
                android:textSize="19dp"
                android:textColor="@color/customeColor"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:text="Price"
                android:textSize="19dp"
                android:textColor="@color/customeColor"
                android:textStyle="bold"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"/>
        </TableRow>





    </TableLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffffff"
        android:layout_marginTop="340dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="GST:42.00"
        android:textSize="19dp"
        android:layout_marginTop="340dp"
        android:textColor="@color/customeColor"
        android:textStyle="bold"
        android:layout_marginLeft="255dp"


        />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#C72F82"
        android:layout_marginTop="365dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:text="Net Price :"
        android:textSize="21dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="200dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="385dp"
        android:background="#C72F82"
        android:textSize="19dp"
        android:textColor="#ffffff"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/textdisplay"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Have a Coupon ?"
        android:layout_marginTop="415dp"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_marginLeft="210dp"
        android:textColor="@color/customeColor"
        android:onClick="havecoupon"/>
    <View
        android:layout_width="145dp"
        android:layout_height="1dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="435dp"
        android:background="#C72F82"/>
    <EditText
        android:id="@+id/coupon"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:hint="Coupon"
        android:textSize="18dp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/cornerdesign"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/apply"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:text="Apply"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="295dp"
        android:background="@drawable/savebtn"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="Discount :"
        android:textColor="@color/customeColor"
        android:textSize="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="205dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="00.00"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="305dp"
        android:textColor="@color/customeColor"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:text="Grand Total :"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="184dp"
        android:textColor="@color/customeColor"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="00.00"
        android:textColor="@color/customeColor"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="480dp"/>
    <Button
        android:id="@+id/placeorder"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="PLACE YOUR ORDER"
        android:background="@drawable/savebtn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView8"
        android:onClick="placeorder"
        />


</RelativeLayout>

