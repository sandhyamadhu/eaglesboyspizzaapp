<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.appcare.eaglesboys.activities.Profile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:minHeight="80dp"
            android:layout_marginTop="-80dp"
            app:theme="@style/ToolbarStyle" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_marginLeft="-60dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="-22dp"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/pizzafinal"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="-22dp"
                    android:background="@drawable/tryyy"/>

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=" Edit Profile"
        android:textColor="@color/customeColor"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        />
    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:background="@color/customeColor"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profilenew"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Name"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/customeColor"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/customeColor"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="195dp"
        android:inputType="text"
        android:textColor="@color/customeColor"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Number"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="260dp"
        android:textColor="@color/customeColor"/>
    <EditText
        android:id="@+id/num"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/customeColor"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="240dp"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="@color/customeColor"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Address"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"
        android:textColor="@color/customeColor"/>
    <EditText
        android:id="@+id/addresss"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/customeColor"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="295dp"
        android:inputType="text"
        android:textColor="@color/customeColor"/>
    <Button

        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/savebtn"
        android:text="Ok"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />
    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/savebtn"
        android:text="LogOut"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:onClick="logout"
        />

</RelativeLayout>
