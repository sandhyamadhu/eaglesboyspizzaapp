<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/imgNonVegPizza"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/capsicum" />

    <LinearLayout
        android:id="@+id/lrPizzaName"
        android:layout_toRightOf="@id/imgNonVegPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:id="@+id/txtNonVegPizzaName"
            android:textStyle="bold"
            android:textColor="@color/customeColor"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/txtNonVegPizzaPrice"
            android:maxLines="1"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/txtNonVegPizzaDesc"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lrPizzaName"
        android:layout_toEndOf="@+id/imgNonVegPizza" />

    <ImageView
        android:id="@+id/imgNVOpenChild"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imgNonVegPizza"
        android:layout_alignParentEnd="true"
        android:src="@drawable/dwnarw" />
</RelativeLayout>