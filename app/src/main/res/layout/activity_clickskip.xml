<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/blackcolor"
              xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pizzafinal" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tryyy" />
    </LinearLayout>
    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/tabbedbtn">

        <RadioButton
            android:id="@+id/radioWindows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:padding="15dp"
            android:text="Home Delivery"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioAndroid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="Pick Up"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RadioGroup>
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Delivery Location"
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textStyle="bold"
        android:editable="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#C72F82"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="#fff"
            android:textColor="@color/customeColor"
            android:textColorHint="@color/customeColor"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/city"
                android:textSize="14sp"
                android:textColor="#ffff"
                android:editable="false"
                android:textColorHint="#fff"
                android:backgroundTint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City" />
            <requestFocus/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textlaoutlocality"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="#fff"
            android:textColorHint="@color/customeColor"
            android:textColor="@color/customeColor"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/locality"
                android:textSize="14sp"
                android:textColorHighlight="#fff"
                android:textColorLink="#fff"
                android:textColor="#ffff"
                android:editable="false"
                android:textColorHint="#fff"
                android:backgroundTint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Locality" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:textColorHint="@color/customeColor"
            android:backgroundTint="#fff"
            android:textColor="@color/customeColor"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/branch"

                android:textColorHint="#fff"
                android:textColorHighlight="#fff"
                android:textColorLink="#fff"
                android:editable="false"
                android:backgroundTint="#fff"
                android:textColor="#ffff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Store" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnShow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/savebtn"
            android:text="Show Menu"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="1dp"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textStyle="bold|italic"/>
            <View
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>


        <Button
            android:id="@+id/btnSkipLocateMe"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerdesign"
            android:text="Locate Me"
            android:textColor="#C72F82"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>