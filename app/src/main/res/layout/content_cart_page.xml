<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appcare.eaglesboys.activities.CartPage"
    tools:showIn="@layout/activity_cart_page"
    android:background="#000000">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/pizzafinal" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_gravity="right"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/tabbedbtn"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioAndroid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Show Full Menu"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/showcart"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rbtn_selector"
            android:src="@drawable/cart" />
        <TextView
            android:id="@+id/addd"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:text="0"
            android:layout_marginLeft="-80dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/increasecart"/>
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="#C72F82"
        android:id="@+id/view" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:text="ORDER SUMMERY"
            android:textColor="@color/customeColor"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="23dp"

            />

        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="300dp"
            android:text="edit"

            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/savebtn"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:text="GST:42.00"
        android:textSize="19dp"
        android:layout_marginTop="380dp"
        android:textColor="@color/customeColor"
        android:textStyle="bold"
        android:textAlignment="textEnd"

        />
        <TextView
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:background="#C72F82"
            android:layout_marginTop="410dp"
            android:text="Net Price :"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAlignment="textEnd"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="410dp"
            android:background="#C72F82"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:gravity="center"
            />
    <TextView
        android:id="@+id/textdisplay"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Have a Coupon ?"
        android:layout_marginTop="470dp"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_marginLeft="240dp"
        android:textColor="@color/customeColor"
        android:onClick="havecoupon"/>
    <View
        android:layout_width="145dp"
        android:layout_height="1dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="490dp"
        android:background="#C72F82"/>
    <EditText
        android:id="@+id/coupon"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:hint="Coupon"
        android:textSize="18dp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/cornerdesign"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/apply"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:text="Apply"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="325dp"
        android:background="@drawable/savebtn"
        android:visibility="invisible"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Discount :"
            android:textColor="@color/customeColor"
            android:textSize="20dp"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="235dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="00.00"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="335dp"
            android:textColor="@color/customeColor"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="Grand Total :"
            android:layout_marginTop="545dp"
            android:layout_marginLeft="218dp"
            android:textColor="@color/customeColor"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="00.00"
            android:textColor="@color/customeColor"
            android:textSize="20dp"
            android:textStyle="bold"/>



</RelativeLayout>
