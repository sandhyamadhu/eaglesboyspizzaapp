<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appcare.eaglesboys.activities.Payment"
    tools:showIn="@layout/activity_payment"
    android:background="#000000">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/pizzafinal" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_gravity="right"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/tabbedbtn"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioAndroid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Show Full Menu"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/showcart"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rbtn_selector"
            android:src="@drawable/cart" />
        <TextView
            android:id="@+id/addd"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:text="0"
            android:layout_marginLeft="-80dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/increasecart"/>
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="#C72F82"
        android:id="@+id/view" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="CHOOSE PAYMENT METHODS"
        android:textColor="#C72F82"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="90dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="13dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/cornerdesign"
       />

</RelativeLayout>
